{
  "name": "quantumshiftplanner",
  "version": "1.0.0",
  "private": true,
  "description": "Complete Workforce Management System - Planday Alternative",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/**\" dev",
    "build": "pnpm --filter \"./packages/**\" build && pnpm --filter \"./apps/**\" build",
    "start:web": "pnpm --filter @planday/web start",
    "start:api": "pnpm --filter @planday/api start",
    "start:worker": "pnpm --filter @planday/worker start",
    "test": "pnpm --recursive test",
    "test:unit": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json,yml,yaml}\"",
    "type-check": "pnpm --recursive --parallel run type-check",
    "db:generate": "pnpm --filter @planday/database db:generate",
    "db:migrate": "pnpm --filter @planday/database db:migrate",
    "db:push": "pnpm --filter @planday/database db:push",
    "db:studio": "pnpm --filter @planday/database db:studio",
    "clean": "pnpm --recursive exec rm -rf dist .next .turbo node_modules && rm -rf node_modules",
    "clean:build": "pnpm --recursive exec rm -rf dist .next .turbo",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.3.3",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "@esbuild-kit/core-utils": "npm:tsx@latest",
      "@esbuild-kit/esm-loader": "npm:tsx@latest"
    }
  },
  "packageManager": "pnpm@9.14.4"
}
